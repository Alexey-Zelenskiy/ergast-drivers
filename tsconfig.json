{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "artifacts",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true
  },
  "filesGlob": ["typings/index.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "types": ["react", "react-native", "jest", "styled-components-react-native"],
  "exclude": [
    "android",
    "ios",
    "build",
    "libs",
    "node_modules",
    "storybook",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "compileOnSave": true
}
